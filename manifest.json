{
  "manifest_version": 3,
  "name": "SecurityTrails-Subds",
  "version": "1.0",
  "description": "Extracts subdomains from securitytrails",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "*://*.securitytrails.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}